<h1>新しい応募を作る</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@post) do |f| %>

      <%= f.label :date %>
      <%= f.date_select :date, {}, class: 'form-control' %>
　　　
      <%= f.label :people %>
      <%= f.text_field :people, class: 'form-control' %>

      <%= f.label :money %>
      <%= f.text_field :money, class: 'form-control' %>

      <%= f.label :content %>
      <%= f.text_field :content, class: 'form-control' %>

      <%= f.submit "募集を作る", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>